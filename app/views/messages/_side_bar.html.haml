.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path do
          = icon('far', 'edit', class: "Contents__btn")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "Contents__btn")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .second-items
        = link_to group_messages_path(group) do
          .second-items__name
            = group.name
          .second-items__message
            = group.show_last_message